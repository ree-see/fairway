<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Verify Golf Round - Fairway</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      color: #333;
      line-height: 1.6;
    }

    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      max-width: 500px;
      width: 100%;
      overflow: hidden;
    }

    .card-header {
      background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
      color: white;
      padding: 30px 20px;
      text-align: center;
    }

    .logo {
      font-size: 48px;
      margin-bottom: 10px;
    }

    .card-header h1 {
      font-size: 24px;
      font-weight: 700;
      margin: 0;
    }

    .card-body {
      padding: 30px 20px;
    }

    .player-info {
      text-align: center;
      margin-bottom: 30px;
    }

    .player-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 15px;
      font-size: 32px;
      color: white;
      font-weight: bold;
    }

    .player-name {
      font-size: 22px;
      font-weight: 700;
      color: #333;
      margin-bottom: 5px;
    }

    .player-subtitle {
      font-size: 14px;
      color: #666;
    }

    .round-details {
      background: #f8f9fa;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 25px;
    }

    .detail-row {
      display: flex;
      justify-content: space-between;
      padding: 12px 0;
      border-bottom: 1px solid #e0e0e0;
    }

    .detail-row:last-child {
      border-bottom: none;
    }

    .detail-label {
      font-weight: 600;
      color: #666;
      font-size: 14px;
    }

    .detail-value {
      font-weight: 700;
      color: #333;
      font-size: 16px;
    }

    .score-highlight {
      color: #4CAF50;
      font-size: 32px;
    }

    .button-group {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-bottom: 20px;
    }

    .btn {
      padding: 16px 24px;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-align: center;
      text-decoration: none;
      display: block;
    }

    .btn-primary {
      background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
      color: white;
      box-shadow: 0 4px 15px rgba(76, 175, 80, 0.4);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(76, 175, 80, 0.6);
    }

    .btn-secondary {
      background: #f5f5f5;
      color: #666;
    }

    .btn-secondary:hover {
      background: #e0e0e0;
    }

    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none !important;
    }

    .optional-name {
      margin-bottom: 20px;
    }

    .optional-name label {
      display: block;
      font-weight: 600;
      color: #666;
      margin-bottom: 8px;
      font-size: 14px;
    }

    .optional-name input {
      width: 100%;
      padding: 12px 16px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 16px;
      transition: border-color 0.3s ease;
    }

    .optional-name input:focus {
      outline: none;
      border-color: #4CAF50;
    }

    .footer {
      text-align: center;
      padding: 20px;
      color: white;
    }

    .app-download {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 12px;
      padding: 16px;
      margin-top: 20px;
    }

    .app-download p {
      margin-bottom: 12px;
      font-size: 14px;
    }

    .app-download .btn {
      background: white;
      color: #667eea;
      font-weight: 700;
    }

    .success-message, .error-message {
      text-align: center;
      padding: 20px;
      border-radius: 12px;
      margin-bottom: 20px;
      font-weight: 600;
    }

    .success-message {
      background: #d4edda;
      color: #155724;
      border: 2px solid #c3e6cb;
    }

    .error-message {
      background: #f8d7da;
      color: #721c24;
      border: 2px solid #f5c6cb;
    }

    .icon {
      font-size: 48px;
      margin-bottom: 16px;
    }

    @media (min-width: 768px) {
      .button-group {
        flex-direction: row;
      }

      .btn {
        flex: 1;
      }
    }
  </style>
</head>
<body>
  <%= yield %>

  <div class="footer">
    <div class="app-download">
      <p>Want to track your own golf rounds?</p>
      <a href="#" class="btn">Download Fairway App</a>
    </div>
    <p style="margin-top: 20px; font-size: 12px; opacity: 0.8;">
      © <%= Time.current.year %> Fairway - The Verified Handicap
    </p>
  </div>

  <script>
    function verifyRound(verified) {
      const button = event.target;
      const allButtons = document.querySelectorAll('.btn-primary, .btn-secondary');

      allButtons.forEach(btn => btn.disabled = true);
      button.textContent = verified ? 'Verifying...' : 'Declining...';

      const verifierName = document.getElementById('verifier_name')?.value;
      const token = button.dataset.token;

      fetch(`/verify/${token}/confirm`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        },
        body: JSON.stringify({
          verified: verified,
          verifier_name: verifierName
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          showSuccess(data.message);
        } else {
          showError(data.error);
          allButtons.forEach(btn => btn.disabled = false);
          button.textContent = verified ? '✓ Yes, I Verify' : '✗ No, I Don\'t Verify';
        }
      })
      .catch(error => {
        showError('Something went wrong. Please try again.');
        allButtons.forEach(btn => btn.disabled = false);
        button.textContent = verified ? '✓ Yes, I Verify' : '✗ No, I Don\'t Verify';
      });
    }

    function showSuccess(message) {
      const container = document.querySelector('.card-body');
      container.innerHTML = `
        <div class="success-message">
          <div class="icon">✓</div>
          <div>${message}</div>
        </div>
        <p style="text-align: center; color: #666;">You can close this page now.</p>
      `;
    }

    function showError(message) {
      const existingError = document.querySelector('.error-message');
      if (existingError) existingError.remove();

      const container = document.querySelector('.card-body');
      const errorDiv = document.createElement('div');
      errorDiv.className = 'error-message';
      errorDiv.textContent = message;
      container.insertBefore(errorDiv, container.firstChild);
    }
  </script>
</body>
</html>